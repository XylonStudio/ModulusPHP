#!/usr/bin/env php
<?php
require __DIR__ . '/vendor/autoload.php';
require __DIR__ . '/app/Config/environment.php';

use Symfony\Component\Console\Application;

use App\Console\Commands\TestCommand;
use ModulusPHP\Console\Commands\ServeCommand;
use ModulusPHP\Console\Commands\MigrateCommand;
use ModulusPHP\Console\Commands\MakeRuleCommand;
use ModulusPHP\Console\Commands\MakeModelCommand;
use ModulusPHP\Console\Commands\MakeGrammarCommand;
use ModulusPHP\Console\Commands\MakeMigrationCommand;
use ModulusPHP\Console\Commands\MakeMiddlewareCommand;
use ModulusPHP\Console\Commands\MakeControllerCommand;

$application = new Application();
$application->setVersion('1.0');

# add our commands
$application->add(new TestCommand());
$application->add(new ServeCommand());
$application->add(new MigrateCommand());
$application->add(new MakeRuleCommand());
$application->add(new MakeModelCommand());
$application->add(new MakeGrammarCommand());
$application->add(new MakeMigrationCommand());
$application->add(new MakeMiddlewareCommand());
$application->add(new MakeControllerCommand());

$application->run();